<h1><%= @list.name %></h1>
<% @list.bookmarks.each do |bookmark| %>
<p><strong><%= bookmark.movie.title %></strong> - "<%= bookmark.comment %>"</p>
<% end %>
<%= link_to "Back", lists_path %> |
<%= link_to "+Add Bookmark", new_list_bookmark_path(@list.id) %> |
<%= link_to "Delete", bookmark_path(@list.id), method: :delete, data: { confirm: "Are you sure?" } %>
